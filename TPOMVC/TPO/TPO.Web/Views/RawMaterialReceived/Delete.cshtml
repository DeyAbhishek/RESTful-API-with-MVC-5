@model TPO.Web.Models.RawMaterialReceived

@{
    ViewBag.Title = "Delete Raw Material Receipt";
}
<script type="text/javascript">
    $(document).ready(function ()
    {
        $("#Cancel").click(function()
        {
            var url = "/RawMaterialReceived/Index";
            window.location.href = url;
        });
    });
</script>
<h3>Are you sure you want to delete this Raw Material Receipt?</h3>
<tr>
    <div>
        <h3></h3>
        @Html.ValidationSummary(true)

        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.RawMaterialId)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.RawMaterialDescription)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.LotNumber)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.LotNumber)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DateEntered)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DateEntered)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.EnteredBy)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.EnteredBy)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.LastModified)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.LastModified)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ModifiedBy)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ModifiedBy)
            </dd>
        </dl>

        @using (Html.BeginForm("Delete", "RawMaterialReceived", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                @*<input type="submit" value="Delete" name="Action" class="btn btn-default"  /> 
                <input type="button" value="Cancel" name="Cancel" id="Cancel" class="btn btn-default" />*@ 
                <button class="btn btn-default btn-shadow"
                        onclick="$(this).parents('form:first').submit(); return false;">
                    <span class="glyphicon glyphicon-trash"></span>&nbsp;Delete
                </button>
                <button class="btn btn-default btn-shadow"
                        onclick="window.location.href = '@Url.Action("Index", "RawMaterialReceived")';return false;">
                    <span class="glyphicon glyphicon-remove"></span>&nbsp;Cancel
                </button>
            </div>
        }
    </div>
