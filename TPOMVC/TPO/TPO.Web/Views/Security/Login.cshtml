@model TPO.Web.Models.Login
@{
    
    ViewBag.Title = "Login";
}
@using (Html.BeginForm("Login", "Security", new { returnUrl = Request["ReturnUrl"] }, FormMethod.Post, new { @class = "form-horizontal" }))
{   
    @Html.AntiForgeryToken()
    <h2>Login</h2>
    <br />
    @Html.ValidationSummary(true)
    <br/>
    <div class="form-group">
        @Html.LabelFor(m => m.UserName, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.UserName)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Password)
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button class="btn btn-default btn-shadow"
                    onclick="$(this).parents('form:first').submit(); return false;">
                <span class="glyphicon glyphicon-log-in"></span>&nbsp;Login
            </button>
        </div>
    </div>
}
